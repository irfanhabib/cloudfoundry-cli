#!/bin/bash

(
  set -e

  function printStatus {
      if [ $? -eq 0 ]; then
          echo -e "\nSWEET SUITE SUCCESS"
      else
          echo -e "\nSUITE FAILURE"
      fi
  }

  trap printStatus EXIT

  echo -e "\n Cleaning build artifacts..."
  go clean

  echo -e "\n Formatting packages..."
  go fmt github.com/cloudfoundry/cli/cf/... github.com/cloudfoundry/cli/testhelpers/... github.com/cloudfoundry/cli/generic/... github.com/cloudfoundry/cli/main/... github.com/cloudfoundry/cli/glob/... github.com/cloudfoundry/cli/words/...

  echo -e "\n Testing packages:"
  go test github.com/cloudfoundry/cli/cf/... github.com/cloudfoundry/cli/generic/... -parallel 4 $@

  echo -e "\n Vetting packages for potential issues..."
  go tool vet cf/.
# for file in $(find {cf,fileutils,generic,glob,main,testhelpers,words} \( -name "*.go" -not -iname "*test.go" \))
# do
#   go tool vet -all -shadow=true $file
# done

  echo -e "\n Running build script to confirm everything compiles..."
  bin/build
)
