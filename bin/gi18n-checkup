#!/bin/bash

set +e

export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

go get -u github.com/maximilien/i18n4go/i18n4go
OUTPUT=$?
if [ $OUTPUT -ne 0 ]; then
  printf "Cannot install latest gi18n tool to verify strings:\n${OUTPUT}"
  exit 1
fi

OUTPUT=`i18n4go -c checkup`

if [ "$OUTPUT" != "OK" ]; then
  echo "Error:"
  echo "$OUTPUT"
  exit 1
fi
