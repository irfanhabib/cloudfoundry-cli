#!/usr/bin/env bash

set -e

export GOPATH=~/go
go get -d github.com/jfoley/cf-acceptance-tests/
export CATSPATH=$GOPATH/src/github.com/jfoley/cf-acceptance-tests

curl https://s3.amazonaws.com/go-cli/builds/cf-linux-amd64 > $CATSPATH/gcf

export PATH=$PATH:$CATSPATH

cd $CATSPATH
git pull

$GOPATH/bin/ginkgo -r -v -slowSpecThreshold=300 -skip="admin buildpack"
